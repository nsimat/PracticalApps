@page
@functions
{
    public string DayName { get; set; }

    public void OnGet()
    {
        ViewData["Title"] = "Northwind Website - Accueil";

        Model.DayName = DateTime.Now.ToString("dddd");
    }
}

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Bienvenue à NorthWind!</h1>
        <p class="lead">Nous fournissons des produits à nos fournisseurs.</p>
        <hr class="my-4" />
        <p>C'est @Model.DayName! Parmi nos clients, nous avons des restaurants, des hôtels et des lignes croisières.</p>
        <div class="text-center">
            <a class="btn btn-primary" href="fournisseurs" role="button">
                Plus sur nos fournisseurs
            </a>
            <a class="btn btn-primary" href="packtfeatures/employees">
                Contacter nos employés
            </a>
        </div>
    </div>
</div>
